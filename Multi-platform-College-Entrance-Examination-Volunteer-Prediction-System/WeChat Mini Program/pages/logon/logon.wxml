<!--pages/login/login.wxml-->
<view class="logon-container">

<view class="instruction">
  请输入注册信息：
</view>

<view class="section-container">
  <view class="common-text">手机号</view>
  <input class="common-input" maxlength="11" type="number"  bindinput="add_logon_phone_number" placeholder="请输入11位手机号" />
</view>

<view class="section-container">
  <view class="common-text" >密码</view>
  <input class="common-input"  bindinput="add_logon_password" placeholder="请输入密码" />
</view>

<view class="section-container">
  <view class="common-text" >姓名</view>
  <input class="common-input"  bindinput="add_logon_name" placeholder="请输入您的姓名拼音" />
</view>

<view class="section-container">
  <view class="common-text" >管理员密钥</view>
  <input class="common-input" password type="text"  bindinput="add_logon_verification" placeholder="请输入您的管理员密钥（可为空）" />
</view>


