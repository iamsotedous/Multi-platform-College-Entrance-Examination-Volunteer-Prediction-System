</view>
<view class="pageRoot" hidden="{{is_hidden}}">
  <!-- 页面内容超出屏幕时可滑动 -->
  <scroll-view scroll-y="true">
    <view class="scrollView">
      <view class="content" wx:for="{{items_admin}}" wx:key="index" bindtap="{{taps_admin[index]}}">
        <image src="{{online_icons_admin[index]}}"  style="max-width: 37%;height: 43px;margin-bottom: 10px;"/>
        <text>{{items_admin[index]}}</text>
      </view>
    </view>
  </scroll-view>
</view>
</view>



