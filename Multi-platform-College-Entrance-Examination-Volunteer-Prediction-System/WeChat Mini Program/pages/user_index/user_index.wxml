<view style="margin-top: 20px;background-color: white; justify-content: center; display: flex;height: 50px; align-items: center;background-color: white;border-top-left-radius: 15px;border-top-right-radius:15px ;">
  <text style="justify-content: center; font-size: larger;background-color: white;color: black;">用户功能</text>
</view>
<view class="pageRoot">
  <!-- 页面内容超出屏幕时可滑动 -->
  <scroll-view scroll-y="true">
    <view class="scrollView">
      <view class="content" wx:for="{{items}}" wx:key="index" bindtap="{{taps[index]}}">
        <image src="{{online_icons[index]}}"  style="max-width: 37%;height: 43px;margin-bottom: 10px;"/>
        <text>{{items[index]}}</text>
      </view>
    </view>
  </scroll-view>
</view>

<view hidden="{{is_hidden}}">
  <view style="margin-top: 40px;background-color: white; justify-content: center; display: flex;height: 50px; align-items: center;background-color: white;border-top-left-radius: 15px;border-top-right-radius:15px ;">
