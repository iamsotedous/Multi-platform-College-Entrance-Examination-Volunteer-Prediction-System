}

.scrollView {
  display: flex; 
  flex-direction: row; 
  flex-wrap: wrap;    
  justify-content: space-between; 
}
.content {
  width: 33vw;	
  height: 33vw;
  box-sizing: border-box;
  background-color: white;
  color: black;
  display: flex;		
  flex-direction: column;
  align-items: center;     /* 子 view 垂直居中 */
  justify-content: center; 
  margin-top: 1px;
}