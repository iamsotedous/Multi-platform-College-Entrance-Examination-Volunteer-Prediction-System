<!--pages/admin_add_school_list/admin_add_school_list.wxml-->
<view class="section">
  <view>
    校名：
  </view>
  <input class="picker" type="text" placeholder="示例：西北工业大学" bindinput="school_name_input"/>
  <view style="height: 10px;"></view>
  <view>
    学校所属地区：
  </view>
  <view class="section">
  <picker bindchange="bindPickerChange_location" value="{{index_for_location}}" range="{{array_location}}">
    <view class="picker">
      当前选择：{{array_location[index_for_location]}}
    </view>
  </picker>
  </view>
  <view style="height: 10px;"></view>
  <view>
    学校所属类别：
  </view>
  <view class="section">
    <picker bindchange="bindPickerChange_school" value="{{index_for_school}}" range="{{array_school}}">
      <view class="picker">
        当前选择：{{array_school[index_for_school]}}
      </view>
    </picker>
  </view>
  <view style="height: 10px;"></view>
  <view>
    学校级别：
  </view>
  <view class="section">
    <picker bindchange="bindPickerChange" value="{{index_for_array}}" range="{{array}}">
      <view class="picker">
        当前选择：{{array[index_for_array]}}
      </view>
    </picker>
  </view>
</view>

