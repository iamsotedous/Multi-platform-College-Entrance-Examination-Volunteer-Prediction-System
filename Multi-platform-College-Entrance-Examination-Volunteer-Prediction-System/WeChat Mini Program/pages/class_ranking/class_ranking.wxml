<!--pages/class_ranking/class_ranking.wxml-->

<view class="title">
  各大类排名展示
</view>

<view class="section">
  <view class="section__title">选择热门专业大类：</view>
  <picker bindchange="bindPickerChange_class" value="{{index_for_class}}" range="{{array_class}}">
    <view class="picker">
      当前选择：{{array_class[index_for_class]}}
    </view>
  </picker>
</view>

<button class="btn" bindtap="search_by_class">查询排名</button>

<view wx:for = "{{output_list2}}">
  <view class = "itemRoot" >
    <view class="output_item_top">
      院校名：{{item.school_name}}
    </view>
    <view class="output_item_middle">
      专业名：{{item.major}}
    </view>
    <view class="output_item_middle">
      专业类别：{{item.major_class}}
    </view>
    <view class="output_item_middle">
      专业排名：{{item.ruanke_ranking}}
    </view>
    <view class="output_item_middle">
      专业排名前百分比：{{item.percentage_ranking}}
    </view >
    <view class="output_item_middle">
      学科评估等级：{{item.evaluation_level}}
    </view>
    <view class="output_item_buttom">
      是否为双一流专业：{{item.is_distinction}}
    </view>

  </view>

</view>
