<view class="title">
  高校专业排名展示
</view>

<view class="section">
  <view>
    请输入需要查询的院校名：
  </view>
  <input class="picker" placeholder="示例：西北工业大学" bindinput="add_school_name"/>
</view>


<button class="btn" bindtap="search_by_school_name">查询学校所有的专业排名</button>

<view wx:for = "{{output_list1}}">
  <view class = "itemRoot" bindtap="jump_detail_major_ranking" data-detail="{{item.school_name}}" data-major="{{item.major}}">
    <view class="output_item_top">
      院校名：{{item.school_name}}
    </view>
    <view class="output_item_middle">
      专业名：{{item.major}}
    </view>
    <view class="output_item_buttom">
      专业类别：{{item.major_class}}
    </view>
