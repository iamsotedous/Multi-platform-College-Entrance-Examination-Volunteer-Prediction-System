<!--pages/admin_review_feedback/admin_review_feedback.wxml-->
<view class="title">
  管理用户反馈
</view>

<view class="section">
  <view>
  未回复反馈：
</view>
<view style="height: 10px;"></view>

<view wx:for = "{{output_list}}">
  <view class = "itemRoot" >
    <view class="output_item_top">
      用户手机号：{{item.phone_number}}
    </view>
    <view class="output_item_middle">
      用户反馈：{{item.feedback}}
    </view>
    <view class="output_item_buttom">
      联系方式：{{item.connection}}
    </view>
    <button bindtap="reply" data-id="{{item._id}}" data-phone_number="{{item.phone_number}}">回复</button>
    <view style="height: 10px;">
      
    </view>
  </view>
</view>
<view style="height: 10px;"></view>
<view style="height: 10px;"></view>

