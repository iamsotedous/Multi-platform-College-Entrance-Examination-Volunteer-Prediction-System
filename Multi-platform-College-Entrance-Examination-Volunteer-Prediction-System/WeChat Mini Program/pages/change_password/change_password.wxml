<!--pages/change_password/change_password.wxml-->
<!--pages/login/login.wxml-->
<view class="logon-container">

<view class="instruction">
  请输入更改密码所需的信息：
</view>

<view class="section-container">
  <view class="common-text">手机号</view>
  <input class="common-input" maxlength="11" bindinput="add_change_phone_number" placeholder="请输入11位手机号" />
</view>


<view class="section-container">
  <view class="common-text" >姓名</view>
  <input class="common-input"  bindinput="add_change_name" placeholder="请输入姓名拼音" />
</view>

<view class="section-container">
  <view class="common-text" >密码</view>
  <input class="common-input" bindinput="add_change_password" placeholder="请输入新密码" />
</view>



<view class="btn-area1">
      <button class="btn" type="default" style="background:#0164a6; color:white" bindtap="change_password">更改密码</button>
</view>



</view>
